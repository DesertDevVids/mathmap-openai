%define(matmult,n,
    %for(i,0,%[n-1],
        %for(j,0,%[n-1],
            float a%i%j = %<lst=%list()>%for(k,0,%[n-1],%<lst[%k]=%arg(0,%[i*n+k]) * %arg(1,%[k*n+j])>)%listJoin(+,%lst);%'\n'
        )
    )\

    %for(i,0,%[n*n-1],
        %result(%i) = a%[i/n]%[i%%n];%'\n'
    )
)\


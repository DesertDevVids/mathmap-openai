)\

%builtin(toRA,toRA,%'((ra 2) (xy 2))',0,
    double %'x, y, r, a';

    x = %arg(0,0);
    y = %arg(0,1);

    r = sqrt%'(x * x + y * y)';
    if %'(r == 0)'
        a = 0.0;
    else
        a = %'acos(x / r) * 180 / M_PI';

    if %'(y < 0)'
        a = 360 - a;

    %result(0) = r;
    %result(1) = a;
)\

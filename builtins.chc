%builtin(__div,div_ri,%'((ri 2) (ri 2) (ri 2))',0,
    float r1 = %arg(0,0);
    float r2 = %arg(1,0);
    float c1 = %arg(0,1);
    float c2 = %arg(1,1);

    if %'('r2 == 0 && c2 == 0%')'
    {
        %result(0) = 0;
        %result(1) = 0;
    }
    else
    {
        %result(0) = %'(r1 * r2 + c1 * c2) / (r2 * r2 + c2 * c2)';
        %result(1) = %'(-r1 * c2 + r2 * c1) / (r2 * r2 + c2 * c2)';
    }
)\

